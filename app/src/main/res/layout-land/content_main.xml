<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

<GridLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/gridLayout2">


    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/editSumm"
            android:layout_column="7"
            android:layout_row="0"
            android:hint="@string/hint1"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:ems="10"
            android:id="@+id/editPeople"
            android:layout_column="7"
            android:layout_row="3"
            android:hint="@string/hint2"/>


</GridLayout>




<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="45dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:text="@string/button"
        android:textColor="@android:color/white"
        android:onClick="onButtonClick"
        android:background="@drawable/states_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_weight="1"
        android:layout_marginEnd="35dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonTips"
        android:text="@string/button_tips"
        android:textColor="@android:color/white"
        android:onClick="onButtonTipsClick"
        android:background="@drawable/states_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_weight="1"
        android:layout_marginStart="105dp"/>

</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/result"
        android:textSize="27sp"
        android:padding="13dp"
        android:id="@+id/tvResult"
        android:layout_below="@+id/gridLayout2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
